{
  "extends": [ "eslint:recommended", "plugin:react/recommended" ],
  "envs": [
    "node", "browser"
  ],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": [2, "always"],
    "max-len": [2, 120, 4],
    "indent": [2, 2, { "VariableDeclarator": 2, "SwitchCase": 1 }],
    "curly": 2,
    "no-undef": 0,
    "no-console": 0,
    "no-unused-vars": [2, {
      "args": "none"
    }],
    "react/prop-types": "off"
  },
  "plugins": [
    "react"
  ]
}