{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Web",
      "file": "${workspaceFolder}/dist/web/spec-runner.html",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "breakOnLoad": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Node",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--ui",
        "bdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/dist/node/amber-notes-infrastructure.spec.js"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeArgs": [
        "--nolazy"
      ],
      "sourceMaps": true,
      "smartStep": true,
      "outFiles": [ "${workspaceFolder}/dist/node/**/*.js" ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}