{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Node",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--ui",
        "bdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/dist/node/amber-notes-infrastructure.spec.js"
      ],
      "cwd": "${workspaceRoot}/dist/node",
      "runtimeArgs": [
        "--nolazy"
      ],
      "sourceMaps": true,
      "smartStep": true,
      "outFiles": [ "${workspaceFolder}/dist/node/**/*.js" ],
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${workspaceRoot}/src/*",
        "webpack:///./spec/*": "${workspaceRoot}/spec/*"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Web",
      "file": "${workspaceFolder}/dist/web/spec-runner.html",
      "webRoot": "${workspaceFolder}/dist/web",
      "sourceMaps": true,
      "breakOnLoad": true,
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${workspaceRoot}/src/*",
        "webpack:///./spec/*": "${workspaceRoot}/spec/*"
      }
    }
  ]
}