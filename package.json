{
  "name": "amber-notes",
  "description": "A tool which helps manage daily routines easier",
  "keywords": [
    "productivity",
    "notes",
    "todo"
  ],
  "version": "0.0.1",
  "author": "Gediminas Bačkevičius <gediminas.backevicius@gmail.com>",
  "license": "AGPL-3.0",
  "main": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/gedbac/amber-notes-prototype.git"
  },
  "engines": {
    "node": ">=10.13.0"
  },
  "scripts": {
    "develop": "yarn develop-webapp",
    "develop-webapp": "./node_modules/.bin/webpack-dev-server --config webapp.config.js --mode development",
    "build": "yarn build-specs && yarn build-webapp && yarn build-streaming-service",
    "build-specs": "./node_modules/.bin/webpack --config spec.config.js --mode development",
    "build-webapp": "./node_modules/.bin/webpack --config webapp.config.js --mode development",
    "build-streaming-service": "./node_modules/.bin/webpack --config streaming-service.config.js --mode development",
    "build-containers": "docker-compose --project-name amber-notes build",
    "start-containers": "docker-compose --project-name amber-notes up -d",
    "run-node-spec": "cd ./dist/spec/node && ../../../node_modules/mocha/bin/_mocha ./amber-notes-infrastructure.spec.js",
    "run-web-spec": "cd ./dist/spec/web && ../../../node_modules/mocha-headless-chrome/bin/start -f ./spec-runner.html -a no-sandbox"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.5",
    "chai": "^4.2.0",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.1.0",
    "eslint": "^5.12.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-react": "^7.12.3",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.5.0",
    "mocha": "^5.2.0",
    "mocha-headless-chrome": "^2.0.1",
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0",
    "sinon": "^7.2.2",
    "style-loader": "^0.23.1",
    "webpack": "^4.28.4",
    "webpack-cleanup-plugin": "^0.5.1",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-logger": "^3.2.0",
    "koa-response-time": "^2.1.0",
    "koa-router": "^7.4.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  }
}
